<%- include('../base/header') -%>
<%- include('../base/navbar') -%>
<div class="container">

<%- include('../base/messages') -%>
        
            <div class="row mb-4">
                    <div class="col-md-12" style="box-shadow: 0 1px 5px rgba(0, 0, 0, 0.35);">
                            <nav class="navbar navbar-expand-lg navbar-light">
                                    <ol class="navbar-nav">
                                        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                                        <li class="breadcrumb-item"><a href="/table/all">Tables</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">Edit</li>
                                    </ol>
                                    <div class="collapse navbar-collapse" id="navbarNav">
                                      <ul class="navbar-nav ml-auto">
                                            <li class="nav-item">
                                              <a class="nav-link btn btn-primary btn-sm mr-2 text-light" href="/table/new">New</a>
                                            </li>
                                            <li class="nav-item">
                                              <a class="nav-link btn btn-primary btn-sm mr-2 text-light" href="/table/all">All</a>
                                            </li>
                                        </ul>
                                    </div>
                              </nav>
                        </div>
                </div>
        
    <div class="row mb-4">
        <div class="col-md-12 p-4" style="box-shadow: 0 1px 5px rgba(0, 0, 0, 0.35);">
            <form  action="/table/update" method="post">
              <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="name">Name</label>
                    <input type="text" name="name" id="name" class="form-control" value="<%= table.Name%>" >
                </div>
                <div class="form-group col-md-4">
                        <label for="numberplace">Number place</label>
                        <select  name="numberplace" id="inputcity" class="form-control">
                                <% number_place.forEach((number_place)=> {%>
                                    <% if(number_place == table.NumberPlace) {%>
                                    <option value="<%= number_place %>" selected><%= number_place %></option>
                                    <% } else { %>
                                    <option value="<%= number_place %>"><%= number_place %></option>
                                    <% } %>
                                <% }) %> 
                        </select>                
                </div>
                <div class="form-group col-md-4">
                    <label for="type">Type</label>
                    <input type="text" name="type" id="type" class="form-control" value="<%= table.Type%>" >
                </div>
                <div class="form-group col-md-12">
                    <label for="description">Description</label>
                    <textarea class="form-control" name="description" id="description" rows="3"><%= table.Description%></textarea>
                </div>
                <input type="hidden" name="id" value="<%=table.id%>">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary"> Update</button>
                </div>
              </div>
            </form>
        </div>
    </div>
</div>

    
<%- include('../base/footer') -%>