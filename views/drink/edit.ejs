<%- include('../base/header') -%>
<%- include('../base/navbar') -%>
<div class="container">

<%- include('../base/messages') -%>
        
            <div class="row mb-4">
                    <div class="col-md-12" style="box-shadow: 0 1px 5px rgba(0, 0, 0, 0.35);">
                            <nav class="navbar navbar-expand-lg navbar-light">
                                    <ol class="navbar-nav">
                                        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                                        <li class="breadcrumb-item"><a href="/drink/all">Drinks</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">Edit</li>
                                    </ol>
                                    <div class="collapse navbar-collapse" id="navbarNav">
                                      <ul class="navbar-nav ml-auto">
                                            <li class="nav-item">
                                              <a class="nav-link btn btn-primary btn-sm mr-2 text-light" href="/drink/all">All</a>
                                            </li>
                                        </ul>
                                    </div>
                              </nav>
                        </div>
                </div>
        
    <div class="row mb-4">
        <div class="col-md-12 p-4" style="box-shadow: 0 1px 5px rgba(0, 0, 0, 0.35);">
            <form  action="/drink/update" method="post">
              <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="name">Name</label>
                    <input type="text" name="name" id="name" class="form-control" value="<%= drink.Name%>" >
                </div>
                <div class="form-group col-md-6">
                    <label for="alcohol">Alcohol</label>
                    <input type="text" name="alcohol" id="alcohol" class="form-control" value="<%= drink.Alcohol%>" >
                </div>
                <div class="form-group col-md-6">
                    <label for="type">Type</label>
                    <input type="text" name="type" id="type" class="form-control" value="<%= drink.Type%>" >
                </div>
                <div class="form-group col-md-6">
                    <label for="description">Description</label>
                    <input type="text" name="description" id="description" class="form-control" value="<%= drink.Description%>" >
                </div>
                <input type="hidden" name="id" value="<%=drink.id%>">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary"> Update</button>
                </div>
              </div>
            </form>
        </div>
    </div>
</div>

    
<%- include('../base/footer') -%>